# ============================================
# SIGAP UNDIP - Environment Variables
# ============================================
# Copy this file to .env.local for development
# Copy to .env.production for production build
# ============================================

# --------------------------------------------
# Backend API Configuration
# --------------------------------------------
# URL backend API (tanpa trailing slash dan tanpa /api karena endpoint sudah include /api)
# Contoh: endpoint /api/login akan jadi https://sigap-api-5hk6r.ondigitalocean.app/api/login
NEXT_PUBLIC_API_URL=https://sigap-undip-api-bda67d2f2eb2.herokuapp.com/

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Environment: development, staging, production
NODE_ENV=development

# Application port (default: 3000)
PORT=3000

# --------------------------------------------
# External Services
# --------------------------------------------
# Firebase Storage (untuk gambar)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=seputipy.appspot.com

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable/disable auto-refresh untuk dashboard
NEXT_PUBLIC_ENABLE_AUTO_REFRESH=true

# Auto-refresh interval dalam milliseconds (default: 30000 = 30 detik)
NEXT_PUBLIC_REFRESH_INTERVAL=30000

# Enable/disable console logs di production
NEXT_PUBLIC_ENABLE_LOGS=true

# --------------------------------------------
# Security Configuration
# --------------------------------------------
# JWT token expiry warning threshold (dalam detik)
NEXT_PUBLIC_TOKEN_EXPIRY_WARNING=300

# Maximum file upload size (dalam MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# --------------------------------------------
# Geolocation Configuration
# --------------------------------------------
# Timeout untuk mendapatkan lokasi (dalam milliseconds)
NEXT_PUBLIC_LOCATION_TIMEOUT=10000

# Maximum age untuk cached location (dalam milliseconds)
NEXT_PUBLIC_LOCATION_MAX_AGE=300000

# Minimum accuracy yang diterima (dalam meter)
NEXT_PUBLIC_LOCATION_MIN_ACCURACY=1000

# --------------------------------------------
# Development Only
# --------------------------------------------
# Enable React DevTools di production (development only)
# NEXT_PUBLIC_ENABLE_DEVTOOLS=false

# API request delay untuk testing (dalam milliseconds)
# NEXT_PUBLIC_API_DELAY=0
